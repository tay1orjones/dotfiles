# colored bars
pmptGray=$(tput setab 8 && tput setaf 7);
pmptGrayToGreen=$(tput setab 2 && tput setaf 8);
pmptGreenToBlue=$(tput setab 4 && tput setaf 2);
pmptGreenTerminate=$(tput sgr0 && tput setaf 2);
