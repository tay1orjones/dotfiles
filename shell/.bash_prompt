# BEGIN PROMPT STRING
# Terminal title and prompt
PS1="\[\033]0;âš¡ï¸ \W\007\]"; # working directory base name

if [[ "$enableEmojiPrompt" = true ]]; then
  # HOST
  # Change the hostname emoji when connected via SSH
  if [[ "${SSH_TTY}" ]]; then
  	host="${pmptGray} ğŸ›°  ";
  else
  	host="${pmptGray} ğŸ‘¾  ";
  fi;
  PS1+="${host}";
  PS1+="${pmptGrayToGreen}î‚°";


  # USER & WORKING DIRECTORY
  # Change user emoji based on user
  if [[ "${USER}" == "root" ]]; then
  	user="ğŸ¤´ ";
  else
    if [[ "${USER}" == "taylorjones" ]]; then
      user="ğŸ‘¨â€ğŸ’» ";
    else
      user="â“ ";
    fi;
  fi;
  PS1+="${user} \w "; # append full working directory

  # GIT STATUS AND BRANCH
  PS1+="\$(prompt_git \"\[${white}\] î‚  \" \" \")"; # Git repository details

  # RESET - NEWLINE - PROMPT
  PS1+="${reset}";
  PS1+="\n";
  PS1+=" ğŸ‘‰ğŸ»  ${reset}";
else
  PS1+="${pmptGray} ${USER} ${pmptGrayToGreen}î‚°\w ";
  # GIT STATUS AND BRANCH
  PS1+="\$(prompt_git \"\[${white}\] î‚  \" "enableEmojiPrompt")"; # Git repository details
  PS1+="${reset}\n âœ¤ ";
fi
export PS1;

PS2="\[${yellow}\]â†’ \[${reset}\]";
